package zaneoblaneo.SciFiName;

public class ScifiGen {
	private static char[] scifiName;
	private static char[] world;
	private static String worldHelper = "thebrownfoxjumpedoverthelazydog";
	private static char[] althebet = "abcdefghijklmnopqrstuvwxyz ".toCharArray();
	
	public static char[] genScifiName(String name){
		char[] caName = name.toLowerCase().toCharArray();
		scifiName = caName;
		int i = 0;
		for(char c : caName){
			c = althebet[c%27];
			
			scifiName[i] = c;
			i++;
		}
		for(i=0;i<name.length()/2;i++){
			caName[i] = worldHelper[i%31];
		}
		
		return scifiName;
	}
	
	
	
	//Get scifiName
	public char[] getScifiName(){
		return scifiName;
	}
}
