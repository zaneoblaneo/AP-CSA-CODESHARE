package zaneoblaneo.SciFiName;

public class ScifiGen {
	private static char[] scifiName;
	private static char[] world;
	private static String worldHelper = "thebrownfoxjumpedoverthelazydog";
	private static char[] althebet = "abcdefghijklmnopqrstuvwxyz ".toCharArray();
	
	public static String genScifiName(String name){
		char[] caName = name.toLowerCase().toCharArray();
		char[] world = new char[name.length()/2];
		
		scifiName = caName;
		int i = 0;
		for(char c : caName){
			c = althebet[c%27];
			
			scifiName[i] = c;
			i++;
		}
		for(i=0;i<name.length();i++){
			world[i] = worldHelper.toCharArray()[caName[i]%31];
		}
		
		String tmp = String.valueOf(scifiName) + " of: " + String.valueOf(world);
		return tmp;
	}
	
	
	
	//Get scifiName
	public char[] getScifiName(){
		return scifiName;
	}
}
